<Window x:Class="CarsShop.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarsShop.Views"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" SizeToContent="Height" Name="window">
    <Grid>
        <TabControl>
            <TabItem Header="Themes">
                <StackPanel>
                    <ComboBox Margin="5" ItemsSource="{Binding Path=ThemesNames}" SelectedItem="{Binding Path=SelectedTheme}"/>
                    <Button Margin="5,0,5,5" Width="80" Height="28" Command="{Binding CommandSetTheme}" CommandParameter="{Binding ElementName=window}">OK</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Languages">
                <StackPanel>
                    <ComboBox Margin="5"/>
                    <Button Margin="5,0,5,5" Width="80" Height="28">OK</Button>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
