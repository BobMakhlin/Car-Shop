<Window x:Class="CarsShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarsShop"
        xmlns:cs="clr-namespace:CarsShop.Converters"
        mc:Ignorable="d"
        Title="Car shop" Height="450" Width="800">

    <Window.Resources>
        <cs:ColorToBrushConverter x:Key="ColorToBrush"/>
    </Window.Resources>

    <Grid Style="{StaticResource AppControl}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.8*"/>
        </Grid.ColumnDefinitions>

        <!--ListBox, "Add" and "Delete" buttons -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ListBox ItemsSource="{Binding Path=Cars}" SelectedItem="{Binding Path=CurrentCar, Mode=TwoWay}" Margin="5,2,5,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label Content="{Binding Path=Model}"/>
                            <Label Content="{Binding Path=Price}" ContentStringFormat="{}{0:C}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <UniformGrid Rows="1" Grid.Row="1" Margin="5">
                <Button Height="50" Width="Auto"
                        Command="{Binding CommandAddCar}">Add</Button>
                <Button Height="50" Width="Auto" Margin="5,0,0,0"
                        Command="{Binding CommandDeleteCurrentCar}">Delete</Button>
            </UniformGrid>
        </Grid>

        <!--Car data-->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label>Model:</Label>
            <Label Grid.Row="1" >Price:</Label>
            <Label Grid.Row="2">Class:</Label>
            <Label Grid.Row="3" VerticalAlignment="Center">Color:</Label>
            <Label Grid.Row="4" VerticalAlignment="Center">Manufacturer:</Label>

            <TextBox Grid.Column="1" Margin="2,2,5,2" Text="{Binding Path=CurrentCar.Model, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="2,2,5,2" Text="{Binding Path=CurrentCar.Price, StringFormat={}{0:C}, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Margin="2,2,5,2" ItemsSource="{Binding Path=CarClasses}" SelectedItem="{Binding Path=CurrentCar.Class}"/>
            <ComboBox Grid.Row="3" Grid.Column="1" Margin="2,2,5,2" ItemsSource="{Binding Path=CarColors}" SelectedItem="{Binding Path=CurrentCar.Color}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" BorderBrush="Gray" BorderThickness="1" Background="{Binding Path=Color, Converter={StaticResource ColorToBrush}}"/>
                            <Label Content="{Binding Path=Name}" Margin="0,0,0,2.6"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Grid Grid.Row="4" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox Margin="2" ItemsSource="{Binding Path=CarManufacturers}" SelectedItem="{Binding Path=CurrentCar.Manufacturer, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{Binding Path=Name}"/>
                                <Label Content="{Binding Path=Country}" ContentStringFormat="({0})" Margin="-5,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Grid.Column="1" Margin="2,2,5,2" Width="Auto" Command="{Binding CommandEditManufacturers}" Content="...">
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock FontSize="15.5">Edit manufacturers</TextBlock>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
